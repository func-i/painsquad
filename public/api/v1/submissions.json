{
  "apiVersion": "1.0",
  "swaggerVersion": "1.2",
  "basePath": "/",
  "resourcePath": "submissions",
  "apis": [
    {
      "path": "api/submissions",
      "operations": [
        {
          "summary": "Saves Submission from completed 'Pain Case' Survey",
          "responseMessages": [
            {
              "code": 422,
              "message": "Unprocessable Entity"
            }
          ],
          "parameters": [
            {
              "paramType": "form",
              "name": "survey_id",
              "type": "integer",
              "description": "Survey ID",
              "required": true
            },
            {
              "paramType": "form",
              "name": "has_pain",
              "type": "boolean",
              "description": "First Question, indicates if user has experienced pain",
              "required": true
            },
            {
              "paramType": "form",
              "name": "xp_points",
              "type": "integer",
              "description": "User Points Awarded for completing",
              "required": true
            },
            {
              "paramType": "form",
              "name": "answers_attributes",
              "type": "array",
              "description": "Answers",
              "required": true,
              "allowableValues": {
                "valueType": "LIST",
                "values": [
                  "question_id",
                  "choice_id",
                  "value",
                  "bodymap_data",
                  "custom_text"
                ]
              }
            }
          ],
          "method": "post",
          "nickname": "Api::V1::Submissions#create"
        }
      ]
    }
  ]
}