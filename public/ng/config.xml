<?xml version='1.0' encoding='utf-8'?>
<widget id="com.funci.painsquad" version="1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Pain Squad+</name>
  <description></description>
  <author></author>
  <access origin="*" />
  <content src="index.html" />
  <preference name="fullscreen" value="true" />
  <preference name="webviewbounce" value="false" />
  <preference name="UIWebViewBounce" value="false" />
  <preference name="DisallowOverscroll" value="true" />
  <preference name="BackupWebStorage" value="none" />
  <preference name="orientation" value="portrait" />
  <preference name="TopActivityIndicator" value="white"/>
  <preference name="AllowInlineMediaPlayback" value="false" />
  <preference name="AutoHideSplashScreen" value="false" />
  <preference name="loadUrlTimeoutValue" value="60000" />

  <!-- You still need to add this to the config.xml -->
  <preference name="SplashScreen" value="screen" />
  <preference name="SplashScreenDelay" value="10000" />

  <feature name="Keyboard">
    <param name="ios-package" value="IonicKeyboard" onload="true" />
  </feature>

  <feature name="Device">
    <param name="ios-package" value="CDVDevice" />
  </feature>

  <feature name="NetworkStatus">
    <param name="ios-package" value="CDVConnection" />
  </feature>

  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" onload="true" />
  </feature>

  <feature name="Logger">
    <param name="ios-package" value="CDVLogger" />
  </feature>

  <feature name="SplashScreen">
    <param name="ios-package" value="CDVSplashScreen"/>
    <param name="onload" value="true"/>
  </feature>

  <feature name="PushPlugin">
    <param name="ios-package" value="PushPlugin" />
  </feature>

  <platform name="ios">
    <!-- iOS 8.0+ -->
    <!-- iPhone 6 Plus  -->
    <icon src="icons/icon-60-3x.png" width="180" height="180" />

    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch -->
    <icon src="icons/ios/icon-60.png" width="60" height="60" />
    <icon src="icons/ios/icon-60-2x.png" width="120" height="120" />

    <!-- iOS 6.1 -->
    <!-- Spotlight Icon -->
    <icon src="icons/ios/icon-40.png" width="40" height="40" />
    <icon src="icons/ios/icon-40-2x.png" width="80" height="80" />

    <!-- iPad -->
    <icon src="icons/ios/icon-72.png" width="72" height="72" />
    <icon src="icons/ios/icon-72-2x.png" width="144" height="144" />

     <!-- iPhone / iPod Touch -->
    <icon src="icons/ios/icon-57.png" width="57" height="57" />
    <icon src="icons/ios/icon-57-2x.png" width="114" height="114" />

    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="icons/ios/icon-29.png" width="29" height="29" />
    <icon src="icons/ios/icon-29@2x.png" width="58" height="58" />

    <!-- images are determined by width and height. The following are supported -->
    <splash src="screens/ios/screen-iphone-portrait.png" width="320" height="480"/>
    <splash src="screens/ios/screen-iphone-portrait-2x.png" width="640" height="960"/>

    <splash src="screens/ios/Default~iphone.png" width="320" height="480"/>
    <splash src="screens/ios/Default@2x~iphone.png" width="640" height="960"/>

    <splash src="screens/ios/Default-568h@2x~iphone.png" width="640" height="1136"/>
    <splash src="screens/ios/Default-667h@2x~iphone.png" width="750" height="1334"/>
    <splash src="screens/ios/Default-736h@2x~iphone.png" width="1242" height="2208"/>

  </platform>

  <platform name="android">    
    <icon src="icons/android/icon-36-ldpi.png" width="36" height="36" />
    <icon src="icons/android/icon-48-mdpi.png" width="48" height="48" />
    <icon src="icons/android/icon-72-hdpi.png" width="72" height="72" />
    <icon src="icons/android/icon-96-xhdpi.png" width="96" height="96" />
  </platform>

</widget>


